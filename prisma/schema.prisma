generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @unique @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  cellphone   String
  address     Address[]
  validated   Boolean      @default(false)
  active      Boolean      @default(true)
  validations Validation[]
  products    Product[]
  bag         Bag?
  orders      Order[]
}

model Address {
  id           Int     @id @unique @default(autoincrement())
  postalCode   String
  street       String
  neighborhood String
  number       Int
  user         User    @relation(fields: [userId], references: [id])
  userId       Int
  orders       Order[]
}

model Validation {
  id        Int      @id @unique @default(autoincrement())
  code      String
  expired   Boolean  @default(false)
  expiredIn DateTime @default(dbgenerated("NOW() + interval '1 day'"))
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Product {
  id       Int    @id @unique @default(autoincrement())
  name     String
  price    Int
  seller   User   @relation(fields: [sellerId], references: [id])
  sellerId Int
  item     Item[]
}

model Bag {
  id     Int    @id @unique @default(autoincrement())
  items  Item[]
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

model Item {
  id        Int     @id @unique @default(autoincrement())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  bag       Bag?    @relation(fields: [bagId], references: [id])
  bagId     Int?
  inOrder   Boolean @default(false)
  order     Order?  @relation(fields: [orderId], references: [id])
  orderId   Int?
}

enum FormPayment {
  CREDIT_CARD
  DEBIT_CARD
  PIX
}

enum Status {
  PROCESSING
  PREPARING
  SENT
  DELIVERED
}

model Order {
  id          Int         @id @unique @default(autoincrement())
  createAt    DateTime    @default(now())
  formPayment FormPayment @default(CREDIT_CARD)
  address     Address     @relation(fields: [addressId], references: [id])
  addressId   Int
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  items       Item[]
  status      Status      @default(PROCESSING)
}
